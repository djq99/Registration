<form action="/register" method ="post">
    <div class="container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>

        <div>
            <h4>Upload Photo</h4>
        <form ref='uploadForm'
              id='uploadForm'
              action='/upload'
              method='post'
              encType="multipart/form-data">
            <input type="file" name="photo" />
            <input type='submit' value='Upload' />
        </form>
        <br/>
        <br/>
        </div>

        <label for="Email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="Email" required>

        <label for="First Name"><b>First Name</b></label>
        <input type="text" placeholder="Enter First Name" name="First Name" required>

        <label for="Last Name"><b>Last Name</b></label>
        <input type="text" placeholder="Enter Last Name" name="Last Name" required>

        <label for="Password"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="Password" required>

        <label for="Confirm Password"><b>Confirm Password</b></label>
        <input type="password" placeholder="Repeat Password" name="Confirm Password" required>

        <label for="Date of Birth"><b>Date of Birth</b></label>
        <input type="date" placeholder="Enter birthday" name="Date of Birth" required>

        <label for="Zipcode"><b>Zipcode</b></label>
        <input type="text" pattern="[0-9]{5}" placeholder="Enter Zipcode" name="Zipcode" required>

        <label for="Height"><b>Height</b></label>
        <input type="text" placeholder="Enter height" name="Height" required>

        <label for="Gender Preference"><b>Gender Preference</b></label>
        <input type="text" placeholder="Enter Gender Preference" name="Gender Preference" required>

        <label for="Age Preference Min"><b>Age Preference Min</b></label>
        <input type="text" placeholder="Enter Age Preference Min" name="Age Preference Min" required>

        <label for="Age Preference Max"><b>Age Preference Max</b></label>
        <input type="text" placeholder="Enter Age Preference Max" name="Age Preference Max" required>

        <label for="Race"><b>Race</b></label>
        <input type="text" placeholder="Enter Race" name="Race" >

        <label for="Religion"><b>Religion</b></label>
        <input type="text" placeholder="Enter Religion" name="Religion" >

        <hr>

        <button type="submit" class="registerbtn">Register</button>
    </div>

    <div class="container signin">
        <p>Already have an account? <a href="/login">Sign in</a>.</p>
    </div>
</form>
